<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mission_monitoring.bootstrap.type.class">LinkR\Workflow\MissionMonitoringBundle\Form\Type\BootstrapNodeType</parameter>
        <parameter key="mission_monitoring.bootstrap.handler.class">LinkR\Workflow\MissionMonitoringBundle\Form\Handler\BootstrapNodeHandler</parameter>
    </parameters>

    <services>
        <!-- Form -->
        <service id="mission_monitoring.bootstrap.form" class="Symfony\Component\Form\Form" parent="LinkR.node.abstract_form">
            <argument type="service" id="mission_monitoring.bootstrap.type" />
        </service>

        <!-- Form Type -->
        <service id="mission_monitoring.bootstrap.type" class="%mission_monitoring.bootstrap.type.class%" parent="LinkR.node.abstract_type">

        </service>

        <!-- Form Handler -->
        <service id="mission_monitoring.bootstrap.handler" class="%mission_monitoring.bootstrap.handler.class%" parent="LinkR.node.abstract_handler">

        </service>

    </services>

</container>
