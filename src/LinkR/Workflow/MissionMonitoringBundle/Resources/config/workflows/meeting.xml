<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mission_monitoring.meeting.type.class">LinkR\Workflow\MissionMonitoringBundle\Form\Type\MeetingNodeType</parameter>
        <parameter key="mission_monitoring.meeting.handler.class">LinkR\Workflow\MissionMonitoringBundle\Form\Handler\MeetingNodeHandler</parameter>
        <parameter key="mission_monitoring.form.misson_report_type.class">LinkR\Workflow\MissionMonitoringBundle\Form\Type\ReportType</parameter>
    </parameters>

    <services>

        <!-- Form Type -->
        <service id="mission_monitoring.meeting.type" class="%mission_monitoring.meeting.type.class%" parent="LinkR.node.abstract_type">
            <tag name="form.type" alias="mission_meeting_form" />
        </service>

        <!-- Form Handler -->
        <service id="mission_monitoring.meeting.handler" class="%mission_monitoring.meeting.handler.class%" parent="LinkR.node.abstract_handler">

        </service>

        <!-- Mission order report -->
        <service id="mission_monitoring.form.misson_report_type" class="%mission_monitoring.form.misson_report_type.class%">
            <tag name="form.type" alias="mission_report_type" />
        </service>

    </services>

</container>
