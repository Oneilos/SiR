<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="LinkR.comment.form_type.class">LinkR\Bundle\CommentBundle\Form\Type\CommentType</parameter>
        <parameter key="LinkR.comment.form_handler.class">LinkR\Bundle\CommentBundle\Form\Handler\CommentHandler</parameter>
    </parameters>

    <services>

        <!-- Comment Type -->
        <service id="LinkR.comment.form_type" class="%LinkR.comment.form_type.class%" >
            <tag name="form.type" alias="comment_form" />
        </service>

        <!-- Comment Handler-->
        <service id="LinkR.comment.form_handler" class="%LinkR.comment.form_handler.class%">
            <argument type="service" id="security.context" />
        </service>

    </services>

</container>
