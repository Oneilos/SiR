<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="easy_task.user_provider.class">LinkR\Bundle\UserBundle\Security\User\UserProvider</parameter>
        <parameter key="easy_task.user_data_voter.class">LinkR\Bundle\UserBundle\Security\Authorization\Voter\UserDataVoter</parameter>

        <!-- Mission switch form -->
        <parameter key="LinkR_user.form.change_mission_type.class">LinkR\Bundle\UserBundle\Form\Type\ChangeMissionType</parameter>
        <parameter key="LinkR_user.form.change_mission_handler.class">LinkR\Bundle\UserBundle\Form\Handler\ChangeMissionHandler</parameter>

    </parameters>

    <services>
        <!-- User Provider -->
        <service id="easy_task.user_provider" class="%easy_task.user_provider.class%"/>

        <!-- User voter -->
        <service id="easy_task.user_data_voter" class="%easy_task.user_data_voter.class%">
            <tag name="security.voter"/>
        </service>

        <!-- Mission switch form -->
        <service id="LinkR_user.form.change_mission_type" class="%LinkR_user.form.change_mission_type.class%"
            parent="LinkR_user.admin.admin_form_type">
            <tag name="form.type" alias="change_mission_form" />
        </service>
        <service id="LinkR_user.form.change_mission_handler" class="%LinkR_user.form.change_mission_handler.class%"
            parent="LinkR_user.admin.admin_form_handler">
            <argument type="service" id="LinkR_user.domain.mission_order" />
        </service>

    </services>

</container>
