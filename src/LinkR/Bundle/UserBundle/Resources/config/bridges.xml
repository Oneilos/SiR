<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="LinkR_user.bridge.abstract_task.class">LinkR\Bundle\UserBundle\Bridge\AbstractTaskBridge</parameter>
        <parameter key="LinkR_user.bridge.mission_monitoring.class">LinkR\Bundle\UserBundle\Bridge\MissionMonitoringBridge</parameter>
        <parameter key="LinkR_user.bridge.crh_monitoring.class">LinkR\Bundle\UserBundle\Bridge\CrhMonitoringBridge</parameter>
        <parameter key="LinkR_user.bridge.annual_review.class">LinkR\Bundle\UserBundle\Bridge\AnnualReviewBridge</parameter>
        <parameter key="LinkR_user.bridge.lunch.class">LinkR\Bundle\UserBundle\Bridge\LunchBridge</parameter>
    </parameters>

    <services>
        <!-- Abstract definition -->
        <service id="LinkR_user.bridge.abstract_task" class="%LinkR_user.bridge.abstract_task.class%" abstract="true" >
            <argument type="service" id="workflows" />
            <argument type="service" id="LinkR_task.tools.temporal" />
            <argument type="service" id="translator" />
        </service>

        <!-- Mission monitoring bridge -->
        <service id="LinkR_user.bridge.mission_monitoring" class="%LinkR_user.bridge.mission_monitoring.class%"
                 parent="LinkR_user.bridge.abstract_task" >

        </service>

        <!-- Lunch bridge -->
        <service id="LinkR_user.bridge.lunch" class="%LinkR_user.bridge.lunch.class%"
                 parent="LinkR_user.bridge.abstract_task" >

        </service>

        <!-- Crh monitoring bridge -->
        <service id="LinkR_user.bridge.crh_monitoring" class="%LinkR_user.bridge.crh_monitoring.class%"
            parent="LinkR_user.bridge.abstract_task" >

        </service>

        <!-- Annual review bridge -->
        <service id="LinkR_user.bridge.annual_review" class="%LinkR_user.bridge.annual_review.class%"
            parent="LinkR_user.bridge.abstract_task" >

        </service>

    </services>

</container>
