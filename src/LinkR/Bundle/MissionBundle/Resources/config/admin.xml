<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Missions -->
        <parameter key="LinkR_mission.form.mission_filters_type.class">LinkR\Bundle\MissionBundle\Form\Type\MissionFiltersType</parameter>
        <parameter key="LinkR_mission.form.mission_edit_type.class">LinkR\Bundle\MissionBundle\Form\Type\MissionEditType</parameter>
        <parameter key="LinkR_mission.form.mission_new_type.class">LinkR\Bundle\MissionBundle\Form\Type\MissionNewType</parameter>
        <parameter key="LinkR_mission.form.mission_handler.class">LinkR\Bundle\MissionBundle\Form\Handler\MissionHandler</parameter>

        <!-- Clients -->
        <parameter key="LinkR_mission.form.client_type.class">LinkR\Bundle\MissionBundle\Form\Type\ClientType</parameter>
    </parameters>

    <services>
        <!-- Mission filters -->
        <service id="LinkR_mission.form.mission_filters" class="Symfony\Component\Form\Form"
            factory-service="form.factory" factory-method="create" >
            <argument type="service" id="LinkR_mission.form.mission_filters_type" />
        </service>
        <service id="LinkR_mission.form.mission_filters_type" class="%LinkR_mission.form.mission_filters_type.class%"
            parent="LinkR_user.admin.admin_form_type" >
        </service>

        <!-- Mission -->
        <service id="LinkR_mission.form.mission_edit_type" class="%LinkR_mission.form.mission_edit_type.class%"
            parent="LinkR_user.admin.admin_form_type">
            <tag name="form.type" alias="mission_edit_form" />
        </service>
        <service id="LinkR_mission.form.mission_new_type" class="%LinkR_mission.form.mission_new_type.class%"
            parent="LinkR_user.admin.admin_form_type">
            <tag name="form.type" alias="mission_new_form" />
        </service>
        <service id="LinkR_mission.form.mission_handler" class="%LinkR_mission.form.mission_handler.class%">
            <argument type="service" id="notifier" />
            <argument>%kernel.root_dir%</argument>
            <argument type="service" id="logger" />
            <argument>%kernel.debug%</argument>
        </service>


        <!-- Client -->
        <service id="LinkR_mission.form.client_type" class="%LinkR_mission.form.client_type.class%">
            <tag name="form.type" alias="client_form" />
        </service>
    </services>
</container>
