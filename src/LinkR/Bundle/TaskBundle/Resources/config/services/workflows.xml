<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="easy_task.workflows_container.class">LinkR\Bundle\TaskBundle\Workflow\Aggregator</parameter>
        <parameter key="LinkR.task.credentials_warmer.class">LinkR\Bundle\TaskBundle\CacheWarmer\TaskCredentialsWarmer</parameter>
        <parameter key="LinkR.task.security_voter.class">LinkR\Bundle\TaskBundle\Security\Authorization\Voter\TaskVoter</parameter>
    </parameters>

    <services>

        <!-- Credentials warmer -->
        <service id="LinkR.task.credentials_warmer" class="%LinkR.task.credentials_warmer.class%">
            <tag name="kernel.cache_warmer" />
            <argument type="service" id="workflows" />
            <argument type="service" id="translator" />
            <argument>%managed_locales%</argument>
        </service>

        <!-- Task Voter -->
        <service id="LinkR.task.security_voter" class="%LinkR.task.security_voter.class%">
            <tag name="security.voter" />
        </service>

        <!-- Aggregator -->
        <service id="easy_task.workflows_container" class="%easy_task.workflows_container.class%" >
            <argument type="service" id="event_dispatcher" />
            <call method="setup">
                <argument type="service" id="security.context" />
                <argument type="service" id="LinkR.task.security_voter" />
            </call>
        </service>

    </services>

</container>
