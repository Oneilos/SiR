{% extends 'LinkRTaskBundle::task_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <div class="span12 task_timeline">
                    {{ render(controller('LinkRTaskBundle:Dashboard:dashboardTimeline')) }}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block sidebar %}
    {{ parent() }}
    <div class="row-fluid">
        <div class="span12">
            {% render(controller('LinkRUserBundle:Internal:intercontracts', { 'internal': app.user })) %}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {% render(controller('LinkRUserBundle:Internal:teamPastTasks', { 'internal': app.user })) %}
        </div>
    </div>
{% endblock %}
