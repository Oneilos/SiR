{% extends 'LinkRTaskBundle::task_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <div class="span12">
                    {% render(controller('LinkRAgencyBundle:AgencyInfos:getAgencyInfos', { 'internalAgencyId': app.user.AgencyId })) %}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {% render(controller('LinkRAgencyBundle:AgencyTask:agencyPastTasks', { 'internalAgencyId': app.user.AgencyId })) %}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block sidebar %}
    {{ parent() }}
    <div class="row-fluid">
        <div class="span12">
            {% render(controller('LinkRAgencyBundle:AgencyTask:agencyLateTasks', { 'internalAgencyId': app.user.AgencyId })) %}
        </div>
    </div>
{% endblock %}
