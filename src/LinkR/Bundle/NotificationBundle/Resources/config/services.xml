<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="LinkR_notification.notifier.class">LinkR\Bundle\NotificationBundle\Notification\Notifier</parameter>
        <parameter key="LinkR_notification.twig.extension.class">LinkR\Bundle\NotificationBundle\Twig\NotificationExtension</parameter>
    </parameters>

    <services>
        <service id="LinkR_notification.notifier" class="%LinkR_notification.notifier.class%">
            <argument type="service" id="session" />
            <argument type="service" id="translator" />
            <argument type="service" id="fragment.handler" />
            <argument type="service" id="templating" />
            <argument>%LinkR_notification.flat_template%</argument>
        </service>
        <service id="notifier" alias="LinkR_notification.notifier" />

        <service id="LinkR_notification.twig.extension" class="%LinkR_notification.twig.extension.class%">
            <tag name="twig.extension" alias="LinkR_notification" />
            <argument type="service" id="service_container" /> <!-- because circular reference on "templating" -->
        </service>
    </services>

</container>
