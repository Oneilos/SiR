<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="LinkR_document.factory.class">LinkR\Bundle\DocumentBundle\Factory\DocumentFactory</parameter>
        <parameter key="LinkR_document.form.document_type.class">LinkR\Bundle\DocumentBundle\Form\Type\DocumentType</parameter>
        <parameter key="LinkR_document.form.upload_type.class">LinkR\Bundle\DocumentBundle\Form\Type\UploadType</parameter>
    </parameters>

    <services>

        <!-- Document factory -->
        <service id="LinkR_document.factory" class="%LinkR_document.factory.class%">
            <argument>%LinkR_document.upload_directory%</argument>
            <argument>%LinkR_document.allowed_extensions%</argument>
        </service>
        <service id="document.factory" alias="LinkR_document.factory" />

        <!-- Document type -->
        <service id="LinkR_document.form.document_type" class="%LinkR_document.form.document_type.class%">
            <tag name="form.type" alias="document" />
        </service>

        <!-- Upload form -->
        <service id="LinkR_document.form.upload" class="Symfony\Component\Form\Form" factory-service="form.factory" factory-method="create">
            <argument type="service" id="LinkR_document.form.upload_type" />
        </service>
        <service id="LinkR_document.form.upload_type" class="%LinkR_document.form.upload_type.class%">
            <tag name="form.type" alias="document_upload" />
        </service>

    </services>

</container>
