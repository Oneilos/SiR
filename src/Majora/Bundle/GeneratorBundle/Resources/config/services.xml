<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="majora_generator.example.class">Majora\Bundle\GeneratorBundle\Example</parameter>
    </parameters>
    -->

    <services>

        <!-- Generator -->
        <service id="majora.generator" class="Majora\Bundle\GeneratorBundle\Generator\FileGenerator">
            <argument>%kernel.root_dir%/..</argument>
            <argument>skeletons</argument>
            <argument>src</argument>
            <argument type="service" id="filesystem" />
            <argument type="service" id="logger" />
        </service>

    </services>

</container>
